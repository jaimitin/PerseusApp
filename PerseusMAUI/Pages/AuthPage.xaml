<?xml version="1.0" encoding="utf-8" ?>
<pages:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:fa="clr-namespace:PerseusMAUI.FontAwesome"
                       xmlns:mue="clr-namespace:PerseusMAUI.Markup.MarkupExtensions"
                       x:Class="PerseusMAUI.Pages.AuthPage"
                       xmlns:vm="clr-namespace:PerseusMAUI.ViewModels"
                       x:DataType="vm:AuthPageViewModel"
                       xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                       xmlns:pages="clr-namespace:PerseusMAUI.Pages"
                       Shell.NavBarIsVisible="False">

    <VerticalStackLayout Margin="25,0" VerticalOptions="CenterAndExpand" Spacing="15">

        <Entry Text="{Binding Username}" Placeholder="Username" ReturnType="Next"
               xct:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference entryPassword}"/>

        <Grid ColumnDefinitions="*,Auto">

            <Entry x:Name="entryPassword" Text="{Binding Password}" IsPassword="True" Placeholder="Password" Grid.Column="0"
                   ClearButtonVisibility="WhileEditing"/>

            <ImageButton Command="{Binding BiometricsRequestedCommand}" IsVisible="{Binding BiometricsAvailable}" Grid.Column="1" Margin="0,-3" Padding="5"
                         Source="{mue:FontAwesomeIcon Name=Fingerprint, Type=Solid, Size=Large}"/>

        </Grid>

        <Button Text="Unlock" Command="{Binding AuthCommand}" IsEnabled="{Binding CanUnlock}"/>

    </VerticalStackLayout>

</pages:BaseContentPage>