<?xml version="1.0" encoding="utf-8" ?>
<pages:ViewModelContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:vm="clr-namespace:Perseus.App.ViewModels"
                            x:DataType="vm:MainPageViewModel"
                            xmlns:pages="clr-namespace:Perseus.App.Pages"
                            x:Class="Perseus.App.MainPage">


    <ScrollView>
        <VerticalStackLayout>

            <Label HorizontalTextAlignment="Center" Margin="50" FontSize="50" Text="{Binding Now, StringFormat='{0:T}'}" />

        </VerticalStackLayout>
    </ScrollView>


</pages:ViewModelContentPage>
